@page "/dashboard"
@inject NavigationManager NavigationManager

<PageTitle>Dashboard</PageTitle>

<AuthorizeView Roles="Superuser,Admin">
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
    <Authorized>
        <MudGrid Class="mt-4" Justify="Justify.Center">
            <MudItem xs="12" sm="10" md="8" lg="6">
                <MudText Typo="Typo.h4" Class="mb-4 text-center">Dashboard</MudText>

                <MudCard Class="mb-4" Elevation="3">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Primary">
                                <MudIcon Icon="@Icons.Material.Filled.Store" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Outlet Dashboard</MudText>
                            <MudText Typo="Typo.body2">Manage and view all outlet information</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.ArrowForward" Color="Color.Default" OnClick="@(() => NavigationManager.NavigateTo("/dashboard/outlet"))" />
                        </CardHeaderActions>
                    </MudCardHeader>
                </MudCard>

                <MudCard Class="mb-4" Elevation="3">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Secondary">
                                <MudIcon Icon="@Icons.Material.Filled.People" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Staff Dashboard</MudText>
                            <MudText Typo="Typo.body2">Manage staff members and permissions</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.ArrowForward" Color="Color.Default" OnClick="@(() => NavigationManager.NavigateTo("/dashboard/staff"))"/>
                        </CardHeaderActions>
                    </MudCardHeader>
                </MudCard>

                <MudCard Elevation="3">
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Tertiary">
                                <MudIcon Icon="@Icons.Material.Filled.Person" />
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">Customer Dashboard</MudText>
                            <MudText Typo="Typo.body2">View and manage customer information</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.ArrowForward" Color="Color.Default" OnClick="@(() => NavigationManager.NavigateTo("/dashboard/customer"))" />
                        </CardHeaderActions>
                    </MudCardHeader>
                </MudCard>
            </MudItem>
        </MudGrid>
    </Authorized>
</AuthorizeView>